= render_partial(:short_description)
= render_partial(:errors)
%hr.mb-4/
%form{:action => "/registration", :method => "post"}
  .form-group
    %label.lead.label{:for => "player_name"}= I18n.t('index_page.player_name')
    %input#player_name.form-control{:autofocus => "", :name => "player_name", :placeholder => I18n.t('placeholders.player_name'), :required => ""}/
  .form-group
    %label.lead.label{:for => "level"}= I18n.t('index_page.game_level')
    %select.custom-select{:name => "level"}
      %option{:value => ""}= I18n.t('placeholders.game_level')
      - Codebreaker::Difficulty::DIFFICULTIES.each do |difficulty, datum|
        %option{:value => "#{difficulty}"}
          = "#{datum[:level].capitalize} - #{datum[:attempts]} #{I18n.t('index_page.attempts')} - #{datum[:hints]} #{I18n.t('index_page.hints')}"
  %hr.mb-4/
  %button.btn.btn-primary.btn-lg{:type => "submit"}= I18n.t('buttons.start_game')
  %span.float-right
    %a.btn.btn-warning.btn-lg{:href => "/rules", :role => "button"}= I18n.t('buttons.rules')
    %a.btn.btn-success.btn-lg{:href => "/statistics", :role => "button"}= I18n.t('buttons.statistics')
